.h-frame-selector-widget
  padding 0

  .input-group
    display inherit

  .image-frame-control-box
    & > div
      display flex
      flex-direction column
      padding 0

  .image-frame-simple-control
    padding 0

  label[for="mode"]
    display none

  table
    margin-bottom 0

  .table-container td, .table-container th
    padding 0 5px 0 0

  td
    padding 2px

  .current-color
    width 40px

  .picker-offset
    margin-right 50px
    right 0

  .enabled-col
    font-size 0
    text-align center

  input[type=checkbox]
    width 20px

  input[type=number]
    padding 0
    width 60px
